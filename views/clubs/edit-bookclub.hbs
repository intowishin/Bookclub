<h2>Edit Bookclub</h2>

<form action="/clubs/edit-bookclub/{{bookclub._id}}" method="POST">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="{{bookclub.name}}">
    </div>
    <div class="form-group">
        <label for="book">Book</label>
        <input type="text" class="form-control" id="book" name="book" value="{{bookclub.book}}">
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea name="description" rows="4" class="form-control" id="description" value="{{bookclub.description}}"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
