<div id="create-bookclub">
    <h3>Create a New Bookclub</h3>
    <form action="create-bookclub" method="POST">
        <label> Name
            <input type="text" name="name">
        </label>
        <label> Book
            <input type="text" name="book">
        </label>
        <label> Description
            <textarea name="description" rows="4"></textarea>
        </label>

        <button type='submit' class="btn btn-outline-dark btn-sm" type="submit">Create</button>
    </form>
</div>